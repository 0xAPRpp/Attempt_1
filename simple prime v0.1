//Calculating primes using dynamic memory allocation.
# include <iostream>
# include <iomanip>
# include <array>
# include <cctype>
using std::cin; //using std::cin;
using namespace std;//using namespace std
int main()
{
	size_t limit{};
	std::cout << "How many primes do you want to find: ";
	std::cin >> limit;

	size_t* primes{ new size_t[limit]{2} };

	bool isprime{};
	size_t count{ 1 };
	for (size_t i{ 3 }; count<limit ; i += 2)
	{
		isprime = true;
		for (size_t j{ 2 }; j < i; j++)
		{
			if (i % j == 0)
				isprime = false;
		}
		if (isprime)
		{
			primes[count] = i;
			count++;
		}
	}
	for (size_t i{}; i < limit; i++)
		std::cout << primes[i] << std::endl;

	delete[] primes; primes = nullptr;
	std::cout << primes << std::endl;

	system("pause");
	return 0;
}
