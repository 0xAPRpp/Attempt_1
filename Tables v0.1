# include <iostream>
# include <iomanip>
# include <cctype>
//using std::cin; 
using namespace std;//using namespace std
int main()
{
	char ans{};
	do
	{
		size_t table_size{};
		auto table{ 0L + 0L }; //auto and suffixes and expression
		std::cout << "Please enter the table(2-12) and table size(2-12)"
			<< std::endl; //multiple lines - single statement
		std::cin >> table >> table_size;

		if ((table < 2 || table>12) || (table_size < 2 || table_size > 12))
		{
				
			std::cout << "Invalid Entry" << std::endl;
			std::cout << "Do you want to retry? y or n" << std::endl;
			std::cin >> ans;
		}
		else
		{
			std::cout << "     |";
			for (size_t i{ 1 }; i <= table; i++)
			{
				std::cout << std::setw(4) << i;
				std::cout << std::setw(2) << '|';
			}
			std::cout << std::endl;
			for (size_t i{ 0 }; i <= table; i++)
			{
				std::cout << "------";
			}
			std::cout << std::endl;
			for (size_t i{ 1 }; i <= table_size; i++ )
			{
				std::cout << std::setw(4) << i;
				std::cout << std::setw(2) << '|';

				for (size_t j{ 1 }; j <= table; j++)
				{
					std::cout << std::setw(4) << j*i;
					std::cout << std::setw(2) << '|';
				}

				std::cout << std::endl;
			}
		}
		std::cout << "Do you want to try again? y or n" << std::endl;
		std::cin >> ans;
	} while (std::tolower(ans) == 'y');
	std::cout << "Program Exited" << std::endl;
	system("pause");
	return 0;
}



